
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    #Datmua a {
        clear: both;
        background-color: #d1c706;
        color: white;
        width: 150px;
        height: 50px;
        display: block;
        float: right;
        text-align: center;
        margin-right: 20px;
        text-decoration: none;
        font-weight: bold;
        font-size: 16px;
    }

        #Datmua a:hover {
            background-color: #c30a87;
            color: black;
        }

    #anh {
        width: 40%;
        float: left;
        border-left: dotted 1px;
        border-color: azure;
    }
</style>
